{
  "name": "od-emojis",
  "version": "1.0.0",
  "description": "An Angular 2 plugin for emojis support for text inputs and textareas.",
  "keywords": [
    "angular 2",
    "angular",
    "unicode",
    "emoticons",
    "emojis"
  ],
  "main": "index.js",
  "scripts": {
    "clean": "rimraf .tmp && rimraf dist",
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "./node_modules/uglify-js/bin/uglifyjs dist/bundles/od-emojis.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/od-emojis.umd.min.js",
    "copy": "cpx './package-dist.json' dist && renamer --find 'package-dist.json' --replace 'package.json' ./dist/*",
    "build": "npm run clean && npm run transpile && npm run package && npm run minify && npm run copy"
  },
  "license": "MIT",
  "homepage": "https://github.com/paramsinghvc/od-emojis",
  "bugs": {
    "url": "https://github.com/paramsinghvc/od-emojis/issues"
  },
  "repository": {
    "type": "git",    
    "url": "https://github.com/paramsinghvc/od-emojis.git"
  },
  "devDependencies": {
    "@angular/compiler": "^2.4.4",
    "@angular/compiler-cli": "^2.4.4",
    "cpx": "^1.5.0",
    "renamer": "^0.6.1",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "typescript": "~2.0.0",
    "uglify-js": "^2.7.5"
  },
  "dependencies": {
    "@angular/common": "^2.4.4",
    "@angular/core": "^2.4.4",
    "rxjs": "^5.0.3",
    "zone.js": "^0.7.6"
  }
}